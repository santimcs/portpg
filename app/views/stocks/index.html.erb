<p id="notice"><%= notice %></p>
<% content_for :title, 'Stocks' %>
<h1>Stocks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Market</th>
      <th>Price</th>
      <th>Max</th>
      <th>Min</th>
      <th>Pe</th>
      <th>Pbv</th>
      <th>Paid up</th>
      <th>Market cap</th>
      <th>Volume</th>
      <th>Beta</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.market %></td>
        <td><%= stock.price %></td>
        <td><%= stock.max_price %></td>
        <td><%= stock.min_price %></td>
        <td><%= stock.pe %></td>
        <td><%= stock.pbv %></td>
        <td><%= stock.paid_up %></td>
        <td><%= stock.market_cap %></td>
        <td><%= stock.daily_volume %></td>
        <td><%= stock.beta %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path %>
